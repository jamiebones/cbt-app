{
  "name": "cbt-backend",
  "version": "1.0.0",
  "description": "CBT Application Backend Server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:watch": "nodemon src/server.ts",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "redis": "^4.6.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "fluent-ffmpeg": "^2.1.2",
    "xlsx": "^0.18.5",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "express-winston": "^4.2.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "prettier": "^3.0.2",
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/sharp": "^0.32.0",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/compression": "^1.7.2",
    "@types/node-cron": "^3.0.8",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cbt",
    "backend",
    "express",
    "mongodb",
    "redis",
    "monolithic",
    "typescript"
  ],
  "author": "James Oshomah: Jamiebones + Kiro",
  "license": "MIT"
}